

<form action="/contact" method="post">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" placeholder="Justin Case">
  <br>
  <br>
  <label for="address">Address</label>
  <input type="text" name="address" id="address" placeholder="123 North South Street Vancouver, BC V1V 1V1">
  <br>
  <br>
  <label for="department">Department</label>
  <input type="radio" name="department" id="department" value="sales">Sales
  <input type="radio" name="department" id="department" value="marketing">Marketing
  <input type="radio" name="department" id="department" value="technical">Technical
  <br>
  <br>
  <label for="message">Message</label>
  <textarea name="message" id="message"></textarea>
  <br>
  <br>
  <input type="submit" value="Save">
</form>